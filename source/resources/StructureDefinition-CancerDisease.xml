<?xml version="1.0" encoding="utf-8"?>
<StructureDefinition xmlns="http://hl7.org/fhir">
  <url value="http://ga4gh.org/fhir/phenopackets/StructureDefinition/CancerDisease" />
  <version value="1.0.0" />
  <name value="CancerDisease" />
  <title value="Cancer Disease" />
  <status value="draft" />
  <fhirVersion value="4.0.0" />
  <kind value="resource" />
  <abstract value="false" />
  <type value="Condition" />
  <baseDefinition value="http://ga4gh.org/fhir/phenopackets/StructureDefinition/Disease" />
  <derivation value="constraint" />
  <differential>
  
    <!-- Root node - required for differential -->
    <element id="Condition">
      <path value="Condition" />
    </element>
    
    <!-- Set up slicing -->
    <element id="Condition.extension">
      <path value="Condition.extension" />
      <!-- Slice the extension element -->
      <slicing>
        <discriminator>
          <type value="value" />
          <path value="url" />
        </discriminator>
        <!-- We don't care what the order of any extensions is -->
        <ordered value="false"/>
        <rules value="open" />
      </slicing>
    </element>
    
    <!-- The slice that contains the reference to a tumor -->
    <element id="Condition.extension:tumors">
      <path value="Condition.extension" />
      <sliceName value="tumors" />
      <sliceIsConstraining value="false" />
      <label value="tumors" />
      <short value="" />
      <definition value="" />
      <min value="0" />
      <max value="*" />
      <type>
        <code value="Extension" />
        <profile value="http://ga4gh.org/fhir/phenopackets/StructureDefinition/Tumor" />
      </type>
    </element>
    
    <!-- Constrain code so it comes from cancer value set -->
    <element id="Condition.code">
      <path value="Condition.code" />
      <binding>
        <extension url="http://hl7.org/fhir/StructureDefinition/elementdefinition-bindingName">
          <valueString value="Cancer"/>
        </extension>
        <strength value="required"/>
        <valueSet value="http://ga4gh.org/fhir/phenopackets/ValueSet/cancer"/>
      </binding>
    </element> 
    
  </differential>
</StructureDefinition>