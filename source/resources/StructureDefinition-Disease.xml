<?xml version="1.0" encoding="utf-8"?>
<StructureDefinition xmlns="http://hl7.org/fhir">
  <url value="http://ga4gh.org/fhir/phenopackets/StructureDefinition/Disease" />
  <version value="1.0.0" />
  <name value="Disease" />
  <status value="draft" />
  <fhirVersion value="4.0.0" />
  <kind value="resource" />
  <abstract value="false" />
  <type value="Condition" />
  <baseDefinition value="http://hl7.org/fhir/StructureDefinition/Condition" />
  <derivation value="constraint" />
  <differential>
  
    <!-- Root node - required for differential -->
    <element id="Condition">
      <path value="Condition" />
    </element>
    
    <!-- Set up slicing -->
    <element id="Condition.extension">
      <path value="Condition.extension" />
      <slicing>
        <discriminator>
          <type value="value" />
          <path value="url" />
        </discriminator>
        <!-- We don't care what the order of any extensions is -->
        <ordered value="false"/>
        <rules value="open" />
      </slicing>
    </element>
    
    <!-- The slice that contains the coded onset -->
    <element id="Condition.extension:codedOnset">
      <path value="Condition.extension" />
      <sliceName value="codedOnset" />
      <short value="Describes the onset of the disease." />
      <definition value="Describes the onset of the disease using an ontology class." />
      <type>
        <code value="Extension" />
        <profile value="http://ga4gh.org/fhir/phenopackets/StructureDefinition/disease-onset" />
      </type>
    </element>
    
    <!-- Forbidden elements -->
    <element id="Condition.clinicalStatus">
      <path value="Condition.clinicalStatus" />
      <max value="0" />
    </element>
    <element id="Condition.verificationStatus">
      <path value="Condition.verificationStatus" />
      <max value="0" />
    </element>
    <element id="Condition.category">
      <path value="Condition.category" />
      <max value="0" />
    </element>
    <element id="Condition.severity">
      <path value="Condition.severity" />
      <max value="0" />
    </element>
    <element id="Condition.bodySite">
      <path value="Condition.bodySite" />
      <max value="0" />
    </element>
    <element id="Condition.encounter">
      <path value="Condition.encounter" />
      <max value="0" />
    </element>
    <element id="Condition.abatement[x]">
      <path value="Condition.abatement[x]" />
      <max value="0" />
    </element>
    <element id="Condition.recordedDate">
      <path value="Condition.recordedDate" />
      <max value="0" />
    </element>
    <element id="Condition.recorder">
      <path value="Condition.recorder" />
      <max value="0" />
    </element>
    <element id="Condition.asserter">
      <path value="Condition.asserter" />
      <max value="0" />
    </element>
    <element id="Condition.stage">
      <path value="Condition.stage" />
      <max value="0" />
    </element>
    <element id="Condition.evidence">
      <path value="Condition.evidence" />
      <max value="0" />
    </element>
    <element id="Condition.note">
      <path value="Condition.note" />
      <max value="0" />
    </element>
  </differential>
</StructureDefinition>