<?xml version="1.0" encoding="utf-8"?>
<StructureDefinition xmlns="http://hl7.org/fhir">
  <url value="http://ga4gh.org/fhir/phenopackets/StructureDefinition/HtsFile" />
  <name value="HtsFile" />
  <title value="Hts File" />
  <status value="draft" />
  <fhirVersion value="4.0.0" />
  <kind value="resource" />
  <abstract value="false" />
  <type value="DocumentReference" />
  <baseDefinition value="http://hl7.org/fhir/StructureDefinition/DocumentReference" />
  <derivation value="constraint" />
  <differential>
    
     <!-- Root node - required for differential. -->
    <element id="DocumentReference">
      <path value="DocumentReference" />
    </element>
    
    <!-- Set up slicing -->
    <element id="DocumentReference.extension">
      <path value="DocumentReference.extension" />
      <!-- Slice the extension element -->
      <slicing>
        <discriminator>
          <type value="value" />
          <path value="url" />
        </discriminator>
        <!-- We don't care what the order of any extensions is -->
        <ordered value="false"/>
        <!-- Other extensions are allowed in addition to this one -->
        <rules value="open" />
      </slicing>
    </element>
      
    <!-- The slice that contains the genome assembly extension -->
    <element id="DocumentReference.extension:genomeAssembly">
      <path value="DocumentReference.extension" />
      <sliceName value="genomeAssembly" />
      <sliceIsConstraining value="false" />
      <label value="genomeAssembly" />
      <!-- Clone information from the extension definition.
        Duplicative, but this duplication makes it simpler overall -->
      <short value="The genome assembly the contents of this file was called against." />
      <definition value="The genome assembly the contents of this file was called against. We recommend using the Genome Reference Consortium nomenclature e.g. GRCh37, GRCh38." />
      <!-- The genome assebly is required -->
      <min value="1" />
      <max value="1" />
      <type>
        <code value="Extension" />
        <profile value="http://ga4gh.org/fhir/phenopackets/StructureDefinition/htsfile-genome-assembly" />
      </type>
      <isModifier value="false"/>
    </element>
    
    <!-- The slice that contains the individual to specimen identifiers map -->
    <element id="DocumentReference.extension:individualToSpecimenIdentifiers">
      <path value="DocumentReference.extension" />
      <sliceName value="individualToSpecimenIdentifiers" />
      <sliceIsConstraining value="false" />
      <label value="individualToSpecimenIdentifiers" />
      <short value="A map of identifiers mapping an individual refered to in the Phenopacket to a specimen in the file." />
      <definition value="A map of identifiers mapping an individual refered to in the Phenopacket to a specimen in the file. The key values must correspond to the Individual::id for the individuals in the message, the values must map to the specimens in the file." />
      <min value="0" />
      <max value="*" />
      <type>
        <code value="Extension" />
        <profile value="http://ga4gh.org/fhir/phenopackets/StructureDefinition/htsfile-individual-to-specimen-identifiers" />
      </type>
    </element>
    
    <!-- Fixed status - always current. -->
    <element id="DocumentReference.status">
      <path value="DocumentReference.status" />
      <fixedCode value="current" />
    </element>
    
    <!-- Type of document. We change the binding to required. -->
    <element id="DocumentReference.type">
      <path value="DocumentReference.type" />
      <label value="htsFormat" />
      <requirements value="The high throughput sequencing file formats are not available in LOINC." />
      <min value="1" />
      <binding>
        <strength value="required" />
        <description value="This indicates which format the file has." />
        <valueSet value="http://ga4gh.org/fhir/phenopackets/CodeSystem/document-type?vs" />
      </binding>
    </element>
    
    <!-- Subject limited to referencing types in IG. -->
    <element id="DocumentReference.subject">
      <path value="DocumentReference.subject" />
      <type>
        <code value="Reference" />
        <targetProfile value="http://ga4gh.org/fhir/phenopackets/StructureDefinition/Phenopacket" />
        <targetProfile value="http://ga4gh.org/fhir/phenopackets/StructureDefinition/Biosample" />
        <targetProfile value="http://ga4gh.org/fhir/phenopackets/StructureDefinition/Cohort" />
        <targetProfile value="http://ga4gh.org/fhir/phenopackets/StructureDefinition/Family" />
      </type>
    </element>
    
    <!-- Constrained elements. -->
    <element id="DocumentReference.docStatus">
      <path value="DocumentReference.docStatus" />
      <max value="0" />
    </element>
    <element id="DocumentReference.category">
      <path value="DocumentReference.category" />
      <max value="0" />
    </element>
    <element id="DocumentReference.date">
      <path value="DocumentReference.date" />
      <max value="0" />
    </element>
    <element id="DocumentReference.author">
      <path value="DocumentReference.author" />
      <max value="0" />
    </element>
    <element id="DocumentReference.authenticator">
      <path value="DocumentReference.authenticator" />
      <max value="0" />
    </element>
    <element id="DocumentReference.custodian">
      <path value="DocumentReference.custodian" />
      <max value="0" />
    </element>
    <element id="DocumentReference.relatesTo">
      <path value="DocumentReference.relatesTo" />
      <max value="0" />
    </element>
    <element id="DocumentReference.securityLabel">
      <path value="DocumentReference.securityLabel" />
      <max value="0" />
    </element>
    <element id="DocumentReference.context">
      <path value="DocumentReference.context" />
      <max value="0" />
    </element>
  </differential>
</StructureDefinition>