<?xml version="1.0" encoding="utf-8"?>
<StructureDefinition xmlns="http://hl7.org/fhir">
  <url value="http://ga4gh.org/fhir/phenopackets/StructureDefinition/Specimen-Phenopackets" />
  <name value="Specimen-Phenopackets" />
  <status value="draft" />
  <fhirVersion value="4.0.0" />
  <kind value="resource" />
  <abstract value="false" />
  <type value="Specimen" />
  <baseDefinition value="http://hl7.org/fhir/StructureDefinition/Specimen" />
  <derivation value="constraint" />
  <differential>
    <!-- Root node - required for differential. -->
    <element id="Specimen">
      <path value="Specimen" />
    </element>
    
    <!-- Fixed value for status. -->
    <element id="Specimen.status">
      <path value="Specimen.status" />
      <fixedCode value="available" />
    </element>
    
    <!-- Set up slicing -->
    <element id="Specimen.extension">
      <path value="Specimen.extension" />
      <!-- Slice the extension element -->
      <slicing>
        <discriminator>
          <type value="value" />
          <path value="url" />
        </discriminator>
        <!-- We don't care what the order of any extensions is -->
        <ordered value="false"/>
        <rules value="open" />
      </slicing>
    </element>
    
    <!-- The slice that contains the age -->
    <element id="Specimen.extension:individualAgeAtCollection">
      <path value="Specimen.extension" />
      <sliceName value="individualAgeAtCollection" />
      <sliceIsConstraining value="false" />
      <label value="individualAgeAtCollection" />
      <short value="Age of the proband at the time the specimen was taken." />
      <definition value="Age of the proband at the time the specimen was taken." />
      <min value="0" />
      <max value="1" />
      <type>
        <code value="Extension" />
        <profile value="http://ga4gh.org/fhir/phenopackets/StructureDefinition/specimen-individual-age-at-collection" />
      </type>
    </element>
    
    <!-- The slice that contains the control flag -->
    <element id="Specimen.extension:isControlSpecimen">
      <path value="Specimen.extension" />
      <sliceName value="isControlSpecimen" />
      <sliceIsConstraining value="false" />
      <label value="isControlSpecimen" />
      <short value="Whether the specimen is being used as a normal control." />
      <definition value="Whether the specimen is being used as a normal control." />
      <min value="0" />
      <max value="1" />
      <type>
        <code value="Extension" />
        <profile value="http://ga4gh.org/fhir/phenopackets/StructureDefinition/specimen-control" />
      </type>
    </element>
    
    <!-- Forbidden elements. -->
    <element id="Specimen.receivedTime">
      <path value="Specimen.receivedTime" />
      <max value="0" />
    </element>
    <element id="Specimen.parent">
      <path value="Specimen.parent" />
      <max value="0" />
    </element>
    <element id="Specimen.request">
      <path value="Specimen.request" />
      <max value="0" />
    </element>
    <element id="Specimen.collection">
      <path value="Specimen.collection" />
    </element>
    <element id="Specimen.collection.collector">
      <path value="Specimen.collection.collector" />
      <max value="0" />
    </element>
    <element id="Specimen.collection.collected[x]">
      <path value="Specimen.collection.collected[x]" />
      <max value="0" />
    </element>
    <element id="Specimen.collection.duration">
      <path value="Specimen.collection.duration" />
      <max value="0" />
    </element>
    <element id="Specimen.collection.quantity">
      <path value="Specimen.collection.quantity" />
      <max value="0" />
    </element>
    <element id="Specimen.collection.fastingStatus[x]">
      <path value="Specimen.collection.fastingStatus[x]" />
      <max value="0" />
    </element>
    <element id="Specimen.processing">
      <path value="Specimen.processing" />
      <max value="0" />
    </element>
    <element id="Specimen.container">
      <path value="Specimen.container" />
      <max value="0" />
    </element>
    <element id="Specimen.condition">
      <path value="Specimen.condition" />
      <max value="0" />
    </element>
  </differential>
</StructureDefinition>