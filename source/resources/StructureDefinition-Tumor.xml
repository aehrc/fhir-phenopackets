<?xml version="1.0" encoding="utf-8"?>
<StructureDefinition xmlns="http://hl7.org/fhir">
  <url value="http://ga4gh.org/fhir/phenopackets/StructureDefinition/Tumor" />
  <name value="Tumor" />
  <status value="draft" />
  <fhirVersion value="4.0.0" />
  <kind value="resource" />
  <abstract value="false" />
  <type value="BodyStructure" />
  <baseDefinition value="http://hl7.org/fhir/StructureDefinition/BodyStructure" />
  <derivation value="constraint" />
  <differential>
    
    <!-- Root node - required for differential -->
    <element id="BodyStructure">
      <path value="BodyStructure" />
    </element>
    
    <!-- Set up slicing -->
    <element id="BodyStructure.extension">
      <path value="BodyStructure.extension" />
      <!-- Slice the extension element -->
      <slicing>
        <discriminator>
          <type value="value" />
          <path value="url" />
        </discriminator>
        <!-- We don't care what the order of any extensions is -->
        <ordered value="false"/>
        <rules value="open" />
      </slicing>
    </element>
    
    <!-- The slice that contains the link to the associated cancer -->
    <element id="BodyStructure.extension:age">
      <path value="BodyStructure.extension" />
      <sliceName value="relatedConditon" />
      <sliceIsConstraining value="false" />
      <label value="relatedCondition" />
      <short value="A link to the cancer condition related to this tumor." />
      <definition value="A link to the cancer condition related to this tumor." />
      <min value="0" />
      <max value="1" />
      <type>
        <code value="Extension" />
        <profile value="http://ga4gh.org/fhir/phenopackets/StructureDefinition/tumor-related-condition" />
      </type>
    </element>
    
    <!-- Restrict the patient type to be the Individual profile -->
    <element id="BodyStructure.patient">
      <path value="BodyStructure.patient" />
      <type>
        <code value="Reference" />
        <targetProfile value="http://ga4gh.org/fhir/phenopackets/StructureDefinition/Individual" />
        <aggregation value="bundled" />
      </type>
    </element>
    
    <!-- Bind morphology to value set from SCT and NCIt -->
    <element id="BodyStructure.morphology">
      <path value="BodyStructure.morphology" />
      <binding>
        <extension url="http://hl7.org/fhir/StructureDefinition/elementdefinition-bindingName">
          <valueString value="Tumor Morphology"/>
        </extension>
        <strength value="preferred"/>
        <valueSet value="http://ga4gh.org/fhir/phenopackets/ValueSet/tumor-morphology"/>
      </binding>
    </element> 
    
    <!-- Forbidden elements -->
    <element id="BodyStructure.active">
      <path value="BodyStructure.active" />
      <max value="0" />
    </element>
    <element id="BodyStructure.description">
      <path value="BodyStructure.description" />
      <max value="0" />
    </element>
    <element id="BodyStructure.image">
      <path value="BodyStructure.image" />
      <max value="0" />
    </element>
  </differential>
</StructureDefinition>